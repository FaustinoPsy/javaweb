<selector
	xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<inset android:insetTop="6dp" android:insetBottom="6dp">
			<shape
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:shape="rectangle">
				<padding android:left="12dp"/>

				<corners android:radius="1dp"/>

				<solid android:color="@color/stupid_button_pressed"/>
			</shape>
		</inset>
	</item>
	<item>
		<inset android:insetTop="6dp" android:insetBottom="6dp">
			<shape
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:shape="rectangle">
				<padding android:left="12dp"/>

				<corners android:radius="1dp"/>

				<solid android:color="@color/stupid_button"/>
			</shape>
		</inset>
	</item>
</selector>